<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <description>Una forma divertida de compartir tus fotos</description>
    <display-name>Pictagram</display-name>
    <resource-ref>
        <description>Pool conexiones MySQL</description>
        <res-ref-name>jdbc/ConexionMySQL</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registro</servlet-name>
        <servlet-class>controller.RegistroServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>editarUsuario</servlet-name>
        <servlet-class>controller.EditarUsuarioServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>portada</servlet-name>
        <servlet-class>controller.PortadaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>nuevaPublicacion</servlet-name>
        <servlet-class>controller.NuevaPublicacionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>editarPublicaciones</servlet-name>
        <servlet-class>controller.EditarPublicacionesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>editarPublicacion</servlet-name>
        <servlet-class>controller.EditarPublicacionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>usuariosAmistades</servlet-name>
        <servlet-class>controller.AmistadesServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/Login.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registro</servlet-name>
        <url-pattern>/Registro.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>editarUsuario</servlet-name>
        <url-pattern>/editarUsuario.jsp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>editarUsuario</servlet-name>
        <url-pattern>/EditarUsuario.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>portada</servlet-name>
        <url-pattern>/portada.jsp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>nuevaPublicacion</servlet-name>
        <url-pattern>/nuevaPublicacion.jsp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>nuevaPublicacion</servlet-name>
        <url-pattern>/NuevaPublicacion.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>editarPublicaciones</servlet-name>
        <url-pattern>/editarPublicaciones.jsp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>editarPublicaciones</servlet-name>
        <url-pattern>/eliminarPublicacion.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>editarPublicacion</servlet-name>
        <url-pattern>/editarPublicacion.jsp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>editarPublicacion</servlet-name>
        <url-pattern>/editarPublicacion.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>usuariosAmistades</servlet-name>
        <url-pattern>/amistades.jsp</url-pattern>
    </servlet-mapping>


</web-app>